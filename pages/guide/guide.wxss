.navigationbar{
  position: relative;
  width: 100%;
  height: 8vh;  
}

/*导航栏文字框定义*/
.box{
  display: inline-block;
  width:20vm;
  padding-left: 20rpx;
  padding-right: 15rpx;
  text-align: center;
  line-height: 8vh;  
}

/*导航栏文字*/
.caption{
   font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
   font-size: 28rpx;
   line-height: 8vh;
   padding-left: 25rpx;
   padding-right: 25rpx;
   color:#383838;
}

/*被点击后的导航栏文字*/
.tab_on{
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-size: 39rpx;
  line-height: 8vh;
  color: #1A1A1A;
  font-weight: 400;
  padding-left: 25rpx;
  padding-right: 25rpx;
}

/*竖向滑动框未被展开时的地图大小*/
.mapbig{
  width: 100%;
  height: 86vh;  
}

/*竖向滑动框被展开时的地图大小*/
.mapsmall{
  width:100%;
  height: 62vh; 
}

/*自定义气泡框*/
.customCallout {
  box-sizing: border-box;
  background-color: #fff; 
  border: 1px solid #888888;
  border-radius: 20px;
  height: 50rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  opacity:0.5;
  padding-left: 15rpx;
  padding-right: 15rpx;
  text-align: center;
}

/*共有x个地点*/
.icon_down{
  background-color: rgb(255, 255, 255); 
  font-size: 25rpx; 
  color:black;
  font-weight: 600;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  text-align: center;
  display: flex;
  flex-flow: row;
  justify-content: center;
  height: 6vh;  /*6%*/
  border-bottom:#D3D3D3 solid 1rpx;
}

.sites_caption{
  line-height: 6vh;
}

.icon_down image{
  width: 35rpx; 
  height: 35rpx;  
  margin-top: 1.6vh;
}

/*竖向滑动框*/
.scr{
  position: relative;
  height: 25vh; /*25%*/
}

scroll-view{
  white-space: nowrap;
}

/*显示的每一个地点*/
.item{
  height: 8vh;  /*8%  显示三条*/
  border-bottom:1px solid #D3D3D3;
  position: relative;
}

/*marker被点击后，地点的颜色变化*/
.item2{
  height: 8vh;
  border-bottom:1px solid #D3D3D3;
  background-color: #D3D3D3;
  position: relative;
}

/*描述地点的文字*/
.item_text{
  margin-left: 15px;
  position: relative;
  bottom: 20rpx;
  line-height: 10vh;
  font-weight: normal;
  font-size: 30rpx; 
}

/*goto图标*/
.icon_goto{
  position: absolute; 
  right: 30rpx;
  top: 17rpx;
  height: 50rpx;
  width: 50rpx; 
  margin-right: 50rpx;
}

/*建筑物图标*/
.building{
  top:17rpx;
  margin-left: 15rpx;
  width: 50rpx; 
  height: 50rpx;  
}

/*搜索图标*/
.search{
  width: 80rpx;
  height: 80rpx;
  position: relative;
  padding-left: 620rpx;
  padding-top: 100rpx;
}
